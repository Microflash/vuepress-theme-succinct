.custom-block
  .custom-block-title
    font-weight 600
    letter-spacing 0.1rem
    margin-bottom -0.4rem
  &.tip, &.warning, &.danger
    padding .1rem 1.5rem
    border-radius 6px
    margin 1rem 0
  &.tip
    background-color #f3f5f7
  &.warning
    background-color rgba(255,229,100,.3)
    color darken(#ffe564, 70%)
    .custom-block-title
      color darken(#ffe564, 50%)
    a
      color $textColor
  &.danger
    background-color #ffe6e6
    color darken(red, 70%)
    .custom-block-title
      color darken(red, 40%)
    a
      color $textColor


