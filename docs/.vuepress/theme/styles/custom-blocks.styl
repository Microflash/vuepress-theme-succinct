.custom-block
  .custom-block-title
    font-weight 600
    letter-spacing 0.1rem
    margin-bottom -0.4rem
  &.tip, &.warning, &.danger
    padding .1rem 1.5rem
    border none
    border-radius 6px
    margin 1rem 0
  &.tip
    background-color var(--badgeTipColor)
  &.warning
    background-color var(--badgeWarningColor)
    color var(--badgeWarningTextColor)
    .custom-block-title
      color var(--badgeWarningTitleColor)
    a
      color var(--textMutedColor)
  &.danger
    background-color var(--badgeErrorColor)
    color var(--badgeErrorTextColor)
    .custom-block-title
      color var(--badgeErrorTitleColor)
    a
      color var(--textMutedColor)


